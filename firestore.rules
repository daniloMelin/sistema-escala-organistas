rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function para verificar autenticação
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function para verificar se o usuário é o dono do recurso
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Regras para a coleção de usuários
    match /users/{userId} {
      // Usuários só podem ler/escrever seus próprios dados
      allow read, write: if isOwner(userId);
      
      // Subcoleção de igrejas
      match /churches/{churchId} {
        allow read, write: if isOwner(userId);
        
        // Subcoleção de organistas
        match /organists/{organistId} {
          allow read, write: if isOwner(userId);
        }
        
        // Subcoleção de escalas
        match /schedules/{scheduleId} {
          allow read, write: if isOwner(userId);
        }
      }
    }
    
    // Bloqueia acesso a qualquer outro documento
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

