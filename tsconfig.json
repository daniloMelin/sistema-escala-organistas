{
  "compilerOptions": {
    "target": "es5", // Compila para uma versão de JS compatível com navegadores mais antigos
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true, // Permite que arquivos .js e .ts coexistam no projeto (essencial para migração gradual)
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true, // Habilita uma série de checagens rigorosas de tipo. Altamente recomendado!
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // create-react-app cuida da compilação, então não precisamos que o TS gere arquivos JS
    "jsx": "react-jsx" // Habilita o suporte para JSX do React
  },
  "include": [
    "src" // Diz ao TypeScript para analisar apenas os arquivos dentro da pasta 'src'
  ]
}